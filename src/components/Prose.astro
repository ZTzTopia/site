---
import type { HTMLAttributes } from 'astro/types';
import Element from './Element.astro';

interface Props extends HTMLAttributes<'div'> {}

const { class: classList = '', ...rest } = Astro.props as Props;
---

<Element
  class:list={[
    'prose',
    'prose-sm',
    'dark:prose-invert',
    'max-w-none',
    'break-words',

    'prose-p:text-flexoki-light-tx',
    'dark:prose-p:text-flexoki-dark-tx',

    'prose-strong:text-flexoki-light-tx',
    'dark:prose-strong:text-flexoki-dark-tx',

    'prose-li:text-flexoki-light-tx',
    'dark:prose-li:text-flexoki-dark-tx',
    'prose-li:marker:text-flexoki-light-tx-2',
    'dark:prose-li:marker:text-flexoki-dark-tx-2',

    'prose-headings:text-flexoki-black',
    'dark:prose-headings:text-flexoki-base-200',

    'prose-code:not-in-prose-pre:text-flexoki-light-cy',
    'dark:prose-code:not-in-prose-pre:text-flexoki-dark-cy',
    'prose-code:not-in-prose-pre:bg-flexoki-light-ui',
    'dark:prose-code:not-in-prose-pre:bg-flexoki-dark-ui',
    'prose-code:not-in-prose-pre:rounded',
    'prose-code:not-in-prose-pre:p-0.5',
    'prose-code:not-in-prose-pre:before:content-[""]',
    'prose-code:not-in-prose-pre:after:content-[""]',

    'prose-pre:border',
    'prose-pre:border-flexoki-base-100',
    'dark:prose-pre:border-flexoki-base-900',

    'prose-blockquote:prose-p:not-italic',
    'prose-blockquote:prose-p:text-flexoki-light-tx',
    'dark:prose-blockquote:prose-p:text-flexoki-dark-tx',
    'prose-blockquote:bg-flexoki-light-bg-2',
    'dark:prose-blockquote:bg-flexoki-dark-bg-2',
    'prose-blockquote:border-flexoki-cyan-600',
    'dark:prose-blockquote:border-flexoki-cyan-400',
    'prose-blockquote:rounded',
    'prose-blockquote:py-1',

    'prose-a:text-flexoki-light-cy',
    'prose-a:hover:text-flexoki-light-cy-2',
    'prose-a:active:text-flexoki-light-cy-2',
    'dark:prose-a:text-flexoki-dark-cy',
    'dark:prose-a:hover:text-flexoki-dark-cy-2',
    'dark:prose-a:active:text-flexoki-dark-cy-2',

    'prose-hr:border-flexoki-base-100',
    'dark:prose-hr:border-flexoki-base-900',

    'prose-img:rounded',
    'prose-img:border',
    'prose-img:border-flexoki-base-100',
    'dark:prose-img:border-flexoki-base-900',

    'prose-thead:border-flexoki-light-ui-2',
    'dark:prose-thead:border-flexoki-dark-ui-2',

    'prose-tr:border-flexoki-light-ui',
    'dark:prose-tr:border-flexoki-dark-ui',

    'prose-th:text-flexoki-light-tx',
    'dark:prose-th:text-flexoki-dark-tx',

    'prose-td:text-flexoki-light-tx-2',
    'dark:prose-td:text-flexoki-dark-tx-2',
  ]}
  {classList}
  {...rest}
>
  <slot />
</Element>
