---
import { Icon } from 'astro-icon/components';
import ButtonIcon from './ButtonIcon.astro';

interface Item {
  url: string;
  title?: string;
  iconName?: string;
}

interface Props {
  items: Item[];
}

const { items }: Props = Astro.props;
---

<footer class="py-4 mt-12">
  <div class="flex justify-center gap-2">
    {
      items.map((item: Item) => (
        <ButtonIcon variant="outline" href={item.url} icon={item.iconName || ""} />
      ))
    }
  </div>
</footer>
